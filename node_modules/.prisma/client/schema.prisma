generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      String   @default("student")
  createdAt DateTime @default(now())
}

model SriLankanDesign {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  category    String
  imageUrl    String
  tags        String
  downloads   Int      @default(0)
  createdAt   DateTime @default(now())
}
