{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:import/recommended"
  ],
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "warn",
    "import/no-unresolved": "error",
    "no-restricted-properties": [
      "error",
      {
        "object": "console",
        "property": "logg",
        "message": "Did you mean 'log'? (Sri Lankan ESLint rule)"
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx"]
      }
    }
  }
}
